<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clarinho3"
    tools:context=".Activity_MenuNavegador">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_activity__menu_navegador" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp">

        <Button
            android:id="@+id/btnCardapio"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/grad_bg"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="Cardapio"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnFale"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/linlayl"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/grad_bg"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Contate - nos"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnCupon"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/linlayl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="580dp"
            android:background="@drawable/grad_bg"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="Cupons"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            tools:text="Cupons" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vpCarousel"
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="45dp" />

    </RelativeLayout>

</RelativeLayout>