<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:clipToPadding="true"
    android:background="@color/clarinho3"
    tools:context=".Activity_Cupons"
    android:id="@+id/parent">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btnVoltarCupom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_voltar"
        android:layout_margin="18dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="356dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/btnCupon1"
            android:layout_width="356dp"
            android:layout_height="150dp"
            android:layout_above="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="82dp"
            android:background="@color/transparent" />

        <RelativeLayout
            android:layout_width="356dp"
            android:layout_height="178dp"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:text="Primeira compra"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="84dp"
                android:text="Clique e confira o cupom" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="356dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="356dp"
            android:layout_height="178dp"
            android:gravity="bottom">

            <Button
                android:id="@+id/btnCupon2"
                android:layout_width="356dp"
                android:layout_height="178dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="13dp"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Compras acima de R$ 70,00"
                android:textAlignment="center"
                android:textColor="@color/preto"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Clique e confira o cupom" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
